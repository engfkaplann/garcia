<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
      <None Remove="BaseTemplate.tt" />
      <None Remove="EntityTemplate.tt" />
    </ItemGroup>
    <ItemGroup>
      <Compile Update="BaseTemplate.cs">
        <AutoGen>True</AutoGen>
        <DesignTime>True</DesignTime>
        <DependentUpon>BaseTemplate.tt</DependentUpon>
      </Compile>
      <Compile Update="EntityTemplate.cs">
        <DependentUpon>EntityTemplate.tt</DependentUpon>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <Content Include="BaseTemplate.tt">
        <Generator>TextTemplatingFilePreprocessor</Generator>
        <LastGenOutput>BaseTemplate.cs</LastGenOutput>
      </Content>
      <Content Include="EntityTemplate.tt">
        <Generator>TextTemplatingFilePreprocessor</Generator>
        <LastGenOutput>EntityTemplate.cs</LastGenOutput>
      </Content>
    </ItemGroup>
</Project>
